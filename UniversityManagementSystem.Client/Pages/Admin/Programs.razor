@page "/admin/programs"
@using UniversityManagementSystem.Client.Models
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "admin")]
@inject HttpClient Http
@inject ISnackbar Snackbar
@inject IDialogService DialogService

<MudContainer MaxWidth="MaxWidth.Large" Class="mt-4">
    <div class="d-flex justify-space-between align-center mb-4">
        <MudText Typo="Typo.h4">Programs Management</MudText>
        <MudButton Variant="Variant.Filled" Color="Color.Primary" StartIcon="@Icons.Material.Filled.Add" OnClick="OpenCreateDialog">Add Program</MudButton>
    </div>

    @if (loading)
    {
        <MudProgressCircular Color="Color.Primary" Indeterminate="true" />
    }
    else
    {
        <MudTable Items="@programs" Hover="true" Striped="true" Filter="new Func<ProgramDto,bool>(FilterFunc)">
            <ToolBarContent>
                <MudText Typo="Typo.h6">Programs List</MudText>
                <MudSpacer />
                <MudTextField @bind-Value="searchString" Placeholder="Search" Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" Class="mt-0"></MudTextField>
            </ToolBarContent>
            <HeaderContent>
                <MudTh>Name</MudTh>
                <MudTh>Faculty</MudTh>
                <MudTh>Type</MudTh>
                <MudTh>Duration (Years)</MudTh>
                <MudTh>Groups</MudTh>
                <MudTh>Actions</MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd DataLabel="Name">@context.Name</MudTd>
                <MudTd DataLabel="Faculty">@context.FacultyName</MudTd>
                <MudTd DataLabel="Type">@context.StudyType</MudTd>
                <MudTd DataLabel="Duration">@context.Duration</MudTd>
                <MudTd DataLabel="Groups">@context.GroupsCount</MudTd>
                <MudTd DataLabel="Actions">
                    <MudIconButton Icon="@Icons.Material.Filled.Edit" Color="Color.Primary" OnClick="@(() => OpenEditDialog(context))" />
                    <MudIconButton Icon="@Icons.Material.Filled.Delete" Color="Color.Error" OnClick="@(() => DeleteProgram(context))" />
                </MudTd>
            </RowTemplate>
            <PagerContent>
                <MudTablePager />
            </PagerContent>
        </MudTable>
    }
</MudContainer>

<MudDialog @bind-IsVisible="isDialogVisible">
    <TitleContent>
        <MudText Typo="Typo.h6">@(isEditing ? "Edit Program" : "Create Program")</MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField @bind-Value="currentProgram.Name" Label="Program Name" Required="true" Class="mb-3" />
        
        <MudSelect T="long" Label="Faculty" @bind-Value="currentProgram.FacultyId" AnchorOrigin="Origin.BottomCenter" Required="true" Class="mb-3">
            @foreach (var faculty in faculties)
            {
                <MudSelectItem T="long" Value="@faculty.Id">@faculty.Name</MudSelectItem>
            }
        </MudSelect>

        <MudSelect T="string" Label="Study Type" @bind-Value="currentProgram.StudyType" AnchorOrigin="Origin.BottomCenter" Class="mb-3">
            <MudSelectItem Value="@("Bachelor")">Bachelor</MudSelectItem>
            <MudSelectItem Value="@("Master")">Master</MudSelectItem>
            <MudSelectItem Value="@("PhD")">PhD</MudSelectItem>
        </MudSelect>

        <MudNumericField @bind-Value="currentProgram.Duration" Label="Duration (Years)" Min="1" Max="6" Class="mb-3" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="CloseDialog">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="SaveProgram">Save</MudButton>
    </DialogActions>
</MudDialog>

@code {
    private List<ProgramDto> programs = new();
    private List<FacultyDto> faculties = new();
    private bool loading = true;
    private string searchString = "";
    
    private bool isDialogVisible;
    private bool isEditing;
    private CreateProgramRequest currentProgram = new();
    private long currentId;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        try
        {
            loading = true;
            programs = await Http.GetFromJsonAsync<List<ProgramDto>>("api/programs") ?? new();
            faculties = await Http.GetFromJsonAsync<List<FacultyDto>>("api/faculties") ?? new();
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error loading data: {ex.Message}", Severity.Error);
        }
        finally
        {
            loading = false;
        }
    }

    private bool FilterFunc(ProgramDto program)
    {
        if (string.IsNullOrWhiteSpace(searchString))
            return true;
        if (program.Name.Contains(searchString, StringComparison.OrdinalIgnoreCase))
            return true;
        if (program.FacultyName != null && program.FacultyName.Contains(searchString, StringComparison.OrdinalIgnoreCase))
            return true;
        return false;
    }

    private void OpenCreateDialog()
    {
        currentProgram = new CreateProgramRequest();
        if (faculties.Any())
        {
            currentProgram.FacultyId = faculties.First().Id;
        }
        isEditing = false;
        isDialogVisible = true;
    }

    private void OpenEditDialog(ProgramDto program)
    {
        currentProgram = new CreateProgramRequest
        {
            Name = program.Name,
            FacultyId = program.FacultyId ?? (faculties.FirstOrDefault()?.Id ?? 0),
            StudyType = program.StudyType ?? "Bachelor",
            Duration = program.Duration ?? 3
        };
        currentId = program.Id;
        isEditing = true;
        isDialogVisible = true;
    }

    private void CloseDialog()
    {
        isDialogVisible = false;
    }

    private async Task SaveProgram()
    {
        try
        {
            if (string.IsNullOrWhiteSpace(currentProgram.Name))
            {
                Snackbar.Add("Name is required", Severity.Warning);
                return;
            }

            HttpResponseMessage response;
            if (isEditing)
            {
                response = await Http.PutAsJsonAsync($"api/programs/{currentId}", currentProgram);
            }
            else
            {
                response = await Http.PostAsJsonAsync("api/programs", currentProgram);
            }

            if (response.IsSuccessStatusCode)
            {
                Snackbar.Add(isEditing ? "Program updated" : "Program created", Severity.Success);
                CloseDialog();
                await LoadData();
            }
            else
            {
                var error = await response.Content.ReadAsStringAsync();
                Snackbar.Add($"Error: {error}", Severity.Error);
            }
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error saving program: {ex.Message}", Severity.Error);
        }
    }

    private async Task DeleteProgram(ProgramDto program)
    {
        bool? result = await DialogService.ShowMessageBox(
            "Warning", 
            $"Deleting {program.Name} can have cascading effects. Are you sure?", 
            yesText:"Delete!", cancelText:"Cancel");

        if (result == true)
        {
            try
            {
                var response = await Http.DeleteAsync($"api/programs/{program.Id}");
                if (response.IsSuccessStatusCode)
                {
                    Snackbar.Add("Program deleted", Severity.Success);
                    await LoadData();
                }
                else
                {
                    var error = await response.Content.ReadAsStringAsync();
                    Snackbar.Add($"Error: {error}", Severity.Error);
                }
            }
            catch (Exception ex)
            {
                Snackbar.Add($"Error deleting program: {ex.Message}", Severity.Error);
            }
        }
    }
}
