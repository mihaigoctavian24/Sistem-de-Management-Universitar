@page "/admin/groups"
@using UniversityManagementSystem.Client.Models
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "admin")]
@inject HttpClient Http
@inject ISnackbar Snackbar
@inject IDialogService DialogService

<MudContainer MaxWidth="MaxWidth.Large" Class="mt-4">
    <div class="d-flex justify-space-between align-center mb-4">
        <MudText Typo="Typo.h4">Groups Management</MudText>
        <MudButton Variant="Variant.Filled" Color="Color.Primary" StartIcon="@Icons.Material.Filled.Add" OnClick="OpenCreateDialog">Add Group</MudButton>
    </div>

    @if (loading)
    {
        <MudProgressCircular Color="Color.Primary" Indeterminate="true" />
    }
    else
    {
        <MudTable Items="@groups" Hover="true" Striped="true" Filter="new Func<GroupDto,bool>(FilterFunc)">
            <ToolBarContent>
                <MudText Typo="Typo.h6">Groups List</MudText>
                <MudSpacer />
                <MudTextField @bind-Value="searchString" Placeholder="Search" Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" Class="mt-0"></MudTextField>
            </ToolBarContent>
            <HeaderContent>
                <MudTh>Name</MudTh>
                <MudTh>Program</MudTh>
                <MudTh>Year</MudTh>
                <MudTh>Students</MudTh>
                <MudTh>Actions</MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd DataLabel="Name">@context.Name</MudTd>
                <MudTd DataLabel="Program">@context.ProgramName</MudTd>
                <MudTd DataLabel="Year">@context.Year</MudTd>
                <MudTd DataLabel="Students">@context.StudentsCount</MudTd>
                <MudTd DataLabel="Actions">
                    <MudIconButton Icon="@Icons.Material.Filled.Edit" Color="Color.Primary" OnClick="@(() => OpenEditDialog(context))" />
                    <MudIconButton Icon="@Icons.Material.Filled.Delete" Color="Color.Error" OnClick="@(() => DeleteGroup(context))" />
                </MudTd>
            </RowTemplate>
            <PagerContent>
                <MudTablePager />
            </PagerContent>
        </MudTable>
    }
</MudContainer>

<MudDialog @bind-IsVisible="isDialogVisible">
    <TitleContent>
        <MudText Typo="Typo.h6">@(isEditing ? "Edit Group" : "Create Group")</MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField @bind-Value="currentGroup.Name" Label="Group Name" Required="true" Class="mb-3" />
        
        <MudSelect T="long" Label="Program" @bind-Value="currentGroup.ProgramId" AnchorOrigin="Origin.BottomCenter" Required="true" Class="mb-3">
            @foreach (var program in programs)
            {
                <MudSelectItem T="long" Value="@program.Id">@program.Name</MudSelectItem>
            }
        </MudSelect>

        <MudNumericField @bind-Value="currentGroup.Year" Label="Year of Study" Min="1" Max="6" Class="mb-3" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="CloseDialog">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="SaveGroup">Save</MudButton>
    </DialogActions>
</MudDialog>

@code {
    private List<GroupDto> groups = new();
    private List<ProgramDto> programs = new();
    private bool loading = true;
    private string searchString = "";
    
    private bool isDialogVisible;
    private bool isEditing;
    private CreateGroupRequest currentGroup = new();
    private long currentId;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        try
        {
            loading = true;
            groups = await Http.GetFromJsonAsync<List<GroupDto>>("api/groups") ?? new();
            programs = await Http.GetFromJsonAsync<List<ProgramDto>>("api/programs") ?? new();
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error loading data: {ex.Message}", Severity.Error);
        }
        finally
        {
            loading = false;
        }
    }

    private bool FilterFunc(GroupDto group)
    {
        if (string.IsNullOrWhiteSpace(searchString))
            return true;
        if (group.Name.Contains(searchString, StringComparison.OrdinalIgnoreCase))
            return true;
        if (group.ProgramName != null && group.ProgramName.Contains(searchString, StringComparison.OrdinalIgnoreCase))
            return true;
        return false;
    }

    private void OpenCreateDialog()
    {
        currentGroup = new CreateGroupRequest();
        if (programs.Any())
        {
            currentGroup.ProgramId = programs.First().Id;
        }
        isEditing = false;
        isDialogVisible = true;
    }

    private void OpenEditDialog(GroupDto group)
    {
        currentGroup = new CreateGroupRequest
        {
            Name = group.Name,
            ProgramId = group.ProgramId ?? (programs.FirstOrDefault()?.Id ?? 0),
            Year = group.Year ?? 1
        };
        currentId = group.Id;
        isEditing = true;
        isDialogVisible = true;
    }

    private void CloseDialog()
    {
        isDialogVisible = false;
    }

    private async Task SaveGroup()
    {
        try
        {
            if (string.IsNullOrWhiteSpace(currentGroup.Name))
            {
                Snackbar.Add("Name is required", Severity.Warning);
                return;
            }

            HttpResponseMessage response;
            if (isEditing)
            {
                response = await Http.PutAsJsonAsync($"api/groups/{currentId}", currentGroup);
            }
            else
            {
                response = await Http.PostAsJsonAsync("api/groups", currentGroup);
            }

            if (response.IsSuccessStatusCode)
            {
                Snackbar.Add(isEditing ? "Group updated" : "Group created", Severity.Success);
                CloseDialog();
                await LoadData();
            }
            else
            {
                var error = await response.Content.ReadAsStringAsync();
                Snackbar.Add($"Error: {error}", Severity.Error);
            }
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error saving group: {ex.Message}", Severity.Error);
        }
    }

    private async Task DeleteGroup(GroupDto group)
    {
        bool? result = await DialogService.ShowMessageBox(
            "Warning", 
            $"Deleting {group.Name} can have cascading effects. Are you sure?", 
            yesText:"Delete!", cancelText:"Cancel");

        if (result == true)
        {
            try
            {
                var response = await Http.DeleteAsync($"api/groups/{group.Id}");
                if (response.IsSuccessStatusCode)
                {
                    Snackbar.Add("Group deleted", Severity.Success);
                    await LoadData();
                }
                else
                {
                    var error = await response.Content.ReadAsStringAsync();
                    Snackbar.Add($"Error: {error}", Severity.Error);
                }
            }
            catch (Exception ex)
            {
                Snackbar.Add($"Error deleting group: {ex.Message}", Severity.Error);
            }
        }
    }
}
