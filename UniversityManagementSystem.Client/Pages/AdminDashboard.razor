@page "/admin-dashboard"
@using Microsoft.AspNetCore.Authorization
@using UniversityManagementSystem.Client.Auth
@attribute [Authorize(Roles = Roles.Admin)]

<MudContainer MaxWidth="MaxWidth.Large" Class="mt-4">
    <MudText Typo="Typo.h3" GutterBottom="true">Admin Dashboard</MudText>
    <MudAlert Severity="Severity.Info">Welcome, Admin! You have full access.</MudAlert>
    
    <MudGrid Class="mt-4">
        <MudItem xs="12" sm="6" md="4">
            <MudCard>
                <MudCardContent>
                    <MudText Typo="Typo.h5">Manage Users</MudText>
                    <MudText Typo="Typo.body2">Create and edit user accounts.</MudText>
                </MudCardContent>
                <MudCardActions>
                    <MudButton Variant="Variant.Text" Color="Color.Primary">Go</MudButton>
                </MudCardActions>
            </MudCard>
        </MudItem>
    </MudGrid>
</MudContainer>
